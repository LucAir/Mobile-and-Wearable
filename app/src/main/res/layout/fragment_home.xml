<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".ui.home.HomeFragment">

    <!-- Header -->
    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Main Mobile Dashboard"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Focus Mode Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/focus_mode_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:background="@drawable/gradient_focus_mode">

            <!-- Focus Mode Status -->
            <TextView
                android:id="@+id/focus_mode_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Focus Mode: Active"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/lock_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_lock"
                app:tint="@color/icon_tint"
                app:layout_constraintBottom_toBottomOf="@id/focus_mode_status"
                app:layout_constraintStart_toEndOf="@id/focus_mode_status"
                app:layout_constraintTop_toTopOf="@id/focus_mode_status" />

            <!-- Heart Rate Visualization -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/heart_container"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/focus_mode_status">

                <!-- Pulse circles -->
                <View
                    android:id="@+id/pulse_circle_outer"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:background="@drawable/circle_pulse_outer"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/pulse_circle_inner"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/circle_pulse_outer"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Heart with heartbeat line -->
                <ImageView
                    android:id="@+id/heart_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_heart"
                    app:tint="@color/heart_color"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/heartbeat_line"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_heartbeat"
                    app:tint="@color/white"
                    app:layout_constraintBottom_toBottomOf="@id/heart_icon"
                    app:layout_constraintEnd_toEndOf="@id/heart_icon"
                    app:layout_constraintStart_toStartOf="@id/heart_icon"
                    app:layout_constraintTop_toTopOf="@id/heart_icon" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Timer Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/timer_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/focus_mode_card">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="32dp"
            android:background="@drawable/gradient_timer">

            <!-- Circular Progress Indicator -->
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/timer_progress"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:progress="83"
                app:indicatorColor="@color/progress_color"
                app:indicatorSize="160dp"
                app:trackColor="@color/progress_track"
                app:trackThickness="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Timer Display -->
            <TextView
                android:id="@+id/timer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25:00"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                app:layout_constraintBottom_toTopOf="@id/timer_subtitle"
                app:layout_constraintEnd_toEndOf="@id/timer_progress"
                app:layout_constraintStart_toStartOf="@id/timer_progress"
                app:layout_constraintTop_toTopOf="@id/timer_progress"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/timer_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/ 5 min break"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                app:layout_constraintBottom_toBottomOf="@id/timer_progress"
                app:layout_constraintEnd_toEndOf="@id/timer_progress"
                app:layout_constraintStart_toStartOf="@id/timer_progress"
                app:layout_constraintTop_toBottomOf="@id/timer_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Heart Rate Text (Optional - can show BPM) -->
    <TextView
        android:id="@+id/heart_rate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="72 BPM"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timer_card" />


    <!-- Heart Rate Simulation Slider -->
    <com.google.android.material.slider.Slider
        android:id="@+id/heart_rate_slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:value="72"
        android:valueFrom="40"
        android:valueTo="120"
        android:stepSize="1"
        app:layout_constraintTop_toBottomOf="@id/heart_rate_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <TextView
        android:id="@+id/slider_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simulated Heart Rate"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        app:layout_constraintTop_toBottomOf="@id/heart_rate_slider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>