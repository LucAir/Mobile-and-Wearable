<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="80dp"
        tools:context=".ui.home.HomeFragment">

        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Main Mobile Dashboard"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/focus_mode_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:background="@drawable/gradient_focus_mode">

                <TextView
                    android:id="@+id/focus_mode_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Focus Mode: Idle"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/lock_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_lock"
                    app:tint="@color/icon_tint"
                    app:layout_constraintBottom_toBottomOf="@id/focus_mode_status"
                    app:layout_constraintStart_toEndOf="@id/focus_mode_status"
                    app:layout_constraintTop_toTopOf="@id/focus_mode_status" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/heart_container"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/focus_mode_status">

                    <View
                        android:id="@+id/pulse_circle_outer"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:background="@drawable/circle_pulse_outer"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/pulse_circle_inner"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:background="@drawable/circle_pulse_outer"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/heart_icon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_heart"
                        app:tint="@color/heart_color"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/heartbeat_line"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_heartbeat"
                        app:tint="@color/white"
                        app:layout_constraintBottom_toBottomOf="@id/heart_icon"
                        app:layout_constraintEnd_toEndOf="@id/heart_icon"
                        app:layout_constraintStart_toStartOf="@id/heart_icon"
                        app:layout_constraintTop_toTopOf="@id/heart_icon" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/timer_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/focus_mode_card">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="32dp"
                android:background="@drawable/gradient_timer">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/timer_progress"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:progress="0"
                    app:indicatorColor="@color/progress_color"
                    app:indicatorSize="160dp"
                    app:trackColor="@color/progress_track"
                    app:trackThickness="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/timer_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    app:layout_constraintBottom_toTopOf="@id/timer_subtitle"
                    app:layout_constraintEnd_toEndOf="@id/timer_progress"
                    app:layout_constraintStart_toStartOf="@id/timer_progress"
                    app:layout_constraintTop_toTopOf="@id/timer_progress"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/timer_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/ ready"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    app:layout_constraintBottom_toBottomOf="@id/timer_progress"
                    app:layout_constraintEnd_toEndOf="@id/timer_progress"
                    app:layout_constraintStart_toStartOf="@id/timer_progress"
                    app:layout_constraintTop_toBottomOf="@id/timer_text" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/heart_rate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="-- BPM"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/timer_card" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            app:layout_constraintTop_toBottomOf="@id/heart_rate_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_start_stop"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Start a focus section?"
                android:textSize="16sp"
                app:cornerRadius="12dp"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_reset"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Reset Timer &amp; Simulator"
                android:textSize="16sp"
                app:cornerRadius="12dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>