<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="80dp"
        tools:context=".ui.home.HomeFragment"
        tools:layout_editor_absoluteX="-17dp"
        tools:layout_editor_absoluteY="-88dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/focus_mode_card"
            android:layout_width="410dp"
            android:layout_height="393dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="422dp"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_focus_mode"
                android:padding="24dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="-1dp">

                <TextView
                    android:id="@+id/focus_mode_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Focus Mode: Idle"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/lock_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_lock"
                    app:layout_constraintBottom_toBottomOf="@id/focus_mode_status"
                    app:layout_constraintStart_toEndOf="@id/focus_mode_status"
                    app:layout_constraintTop_toTopOf="@id/focus_mode_status"
                    app:tint="@color/icon_tint" />

                <TextView
                    android:id="@+id/timer_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="@color/text_primary"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.767" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_start_stop"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Start a focus session?"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/timer_progress"
                    android:layout_width="161dp"
                    android:layout_height="162dp"
                    android:progress="0"
                    app:indicatorColor="@color/progress_color"
                    app:indicatorSize="160dp"
                    app:layout_constraintBottom_toBottomOf="@+id/pulse_circle_outer"
                    app:layout_constraintEnd_toEndOf="@+id/pulse_circle_outer"
                    app:layout_constraintStart_toStartOf="@+id/pulse_circle_outer"
                    app:layout_constraintTop_toTopOf="@+id/pulse_circle_outer"
                    app:trackColor="@color/progress_track"
                    app:trackThickness="8dp" />

                <View
                    android:id="@+id/pulse_circle_outer"
                    android:layout_width="208dp"
                    android:layout_height="196dp"
                    android:background="@drawable/circle_pulse_outer"
                    app:layout_constraintBottom_toTopOf="@+id/timer_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <View
                    android:id="@+id/pulse_circle_inner"
                    android:layout_width="149dp"
                    android:layout_height="157dp"
                    android:background="@drawable/circle_pulse_outer"
                    app:layout_constraintBottom_toBottomOf="@+id/timer_progress"
                    app:layout_constraintEnd_toEndOf="@+id/timer_progress"
                    app:layout_constraintStart_toStartOf="@+id/timer_progress"
                    app:layout_constraintTop_toTopOf="@+id/timer_progress" />

                <ImageView
                    android:id="@+id/heart_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_heart"
                    app:layout_constraintBottom_toBottomOf="@+id/pulse_circle_inner"
                    app:layout_constraintEnd_toEndOf="@+id/pulse_circle_inner"
                    app:layout_constraintStart_toStartOf="@+id/pulse_circle_inner"
                    app:layout_constraintTop_toTopOf="@+id/pulse_circle_inner"
                    app:tint="@color/heart_color" />

                <ImageView
                    android:id="@+id/heartbeat_line"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_heartbeat"
                    app:layout_constraintBottom_toBottomOf="@+id/heart_icon"
                    app:layout_constraintEnd_toEndOf="@+id/pulse_circle_inner"
                    app:layout_constraintStart_toStartOf="@+id/heart_icon"
                    app:layout_constraintTop_toTopOf="@+id/heart_icon"
                    app:tint="@color/white" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_reset"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:text="Reset Timer &amp; Simulator"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/focus_mode_card"
            app:layout_constraintVertical_bias="0.166" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>