<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- Top Bar: User Tokens -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’°"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_user_tokens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="#FFB300"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="50" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customize Guardian"
            android:textColor="#212121"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- RIGHT SIDEBAR: Vertical Category Buttons -->
    <LinearLayout
        android:id="@+id/category_sidebar"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#F5F5F5"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_hat"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="4dp"
            android:text="ðŸŽ©\nHat"
            android:textAllCaps="false"
            android:textSize="11sp"
            android:gravity="center"
            android:padding="4dp"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_tshirt"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="4dp"
            android:text="ðŸ‘•\nShirt"
            android:textAllCaps="false"
            android:textSize="11sp"
            android:gravity="center"
            android:padding="4dp"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_aura"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="4dp"
            android:text="âœ¨\nAura"
            android:textAllCaps="false"
            android:textSize="11sp"
            android:gravity="center"
            android:padding="4dp"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_background"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="4dp"
            android:text="ðŸŒ„\nBG"
            android:textAllCaps="false"
            android:textSize="11sp"
            android:gravity="center"
            android:padding="4dp"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_pet"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="ðŸ¶\nPet"
            android:textAllCaps="false"
            android:textSize="11sp"
            android:gravity="center"
            android:padding="4dp"
            app:cornerRadius="8dp" />

    </LinearLayout>

    <!-- GUARDIAN PREVIEW (Layered Character) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_guardian_preview"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintEnd_toStartOf="@id/category_sidebar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar">

        <FrameLayout
            android:id="@+id/guardian_preview_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_guardian_preview">

            <!-- LAYER 0: Background (furthest back) - INVISIBLE by default -->
            <ImageView
                android:id="@+id/layer_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Background layer"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <!-- LAYER 1: Aura (glow around character) - INVISIBLE by default -->
            <ImageView
                android:id="@+id/layer_aura"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Aura layer"
                android:scaleType="centerInside"
                android:visibility="gone" />

            <!-- LAYER 2: Base Face (ALWAYS VISIBLE - default character) -->
            <ImageView
                android:id="@+id/layer_face"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Base character face"
                android:scaleType="centerInside"
                android:src="@drawable/common_hat_head"
                android:visibility="visible" />

            <!-- LAYER 3: Body/Shirt (clothing) - INVISIBLE by default -->
            <ImageView
                android:id="@+id/layer_body"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Body layer"
                android:scaleType="centerInside"
                android:visibility="gone" />

            <!-- LAYER 4: Hat (on top of head) - INVISIBLE by default -->
            <ImageView
                android:id="@+id/layer_hat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Hat layer"
                android:scaleType="centerInside"
                android:visibility="gone" />

            <!-- LAYER 5: Pet (floating companion) - INVISIBLE by default -->
            <ImageView
                android:id="@+id/layer_pet"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:contentDescription="Pet layer"
                android:scaleType="centerInside"
                android:visibility="gone" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <!-- Rarity Filter Chips -->
    <HorizontalScrollView
        android:id="@+id/rarity_scroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toStartOf="@id/category_sidebar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_guardian_preview">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_rarity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:selectionRequired="false"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_all"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="All" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_common"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Common" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_rare"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rare" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_legendary"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Legendary" />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- Items RecyclerView (Grid) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/items_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/category_sidebar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rarity_scroll"
        tools:listitem="@layout/item_guardian" />

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/items_recycler_view"
        app:layout_constraintEnd_toStartOf="@id/category_sidebar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/items_recycler_view"
        tools:visibility="visible" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/items_recycler_view"
        app:layout_constraintEnd_toStartOf="@id/category_sidebar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/items_recycler_view"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“¦"
            android:textSize="80sp"
            android:alpha="0.5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="No items available"
            android:textColor="#757575"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>