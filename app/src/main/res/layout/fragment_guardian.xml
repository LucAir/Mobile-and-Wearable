<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_user_tokens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:textColor="#FFB300"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Space android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_guardian_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardian Name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="4dp"
            app:drawableEndCompat="@android:drawable/ic_menu_edit"
            android:drawablePadding="8dp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/preview_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/layer_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/> <ImageView
        android:id="@+id/layer_aura"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:visibility="gone"/>

        <ImageView
            android:id="@+id/layer_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_marginBottom="50dp"/>

        <ImageView
            android:id="@+id/layer_face"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_marginBottom="50dp"/>

        <ImageView
            android:id="@+id/layer_pet"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="130dp"
            android:layout_marginStart="20dp"/>
    </FrameLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btn_toggle_menu"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="30dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_drawer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="-30dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#FFFFFF">

        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:src="@android:drawable/arrow_up_float"
            app:tint="#333333"/>

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/bottom_drawer"
        android:layout_width="409dp"
        android:layout_height="318dp"
        android:background="@drawable/bg_rounded_top_sheet"
        android:elevation="4dp"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="40dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tab_character"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Characters"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tab_pet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Pets"
                android:textColor="#999999"
                android:textSize="16sp" />

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tab_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Backgrounds"
                android:textColor="#999999"
                android:textSize="16sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/items_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_circle_guardian" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>